<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Navya Confectionery</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="icon" type="image/png" href="~/Images/Company-Logo.png" />
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="brand">
                <img src="~/images/Company-Logo.png" alt="Navya Confectionery" />
                <span>Navya Confectionery</span>
            </div>
            <nav>
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Shop" asp-action="Index">Shop</a>
                <a asp-controller="Home" asp-action="Occasions">Occasions</a>
                <a asp-controller="About" asp-action="Index">About</a>
                <a asp-controller="Wholesale" asp-action="Index">Wholesale</a>
                <a asp-controller="Contact" asp-action="Index">Contact</a>
                <a asp-controller="Cart" asp-action="Index">Cart</a>
            </nav>
            <div class="utility">
                <form asp-controller="Shop" asp-action="Index" method="get" class="search-bar">
                    <input type="search" name="search" placeholder="Search almonds" />
                </form>
                <a class="btn" asp-controller="Account" asp-action="Login">Account</a>
            </div>
            <button class="mobile-menu" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="footer-grid">
            <div>
                <h3>Navya Confectionery</h3>
                <p>Premium Jordan Almonds crafted in East Hanover, NJ.</p>
            </div>
            <div>
                <h4>Visit</h4>
                <p>12 Almond Way<br />East Hanover, NJ 07936</p>
            </div>
            <div>
                <h4>Contact</h4>
                <p><a href="mailto:hello@navyaalmonds.com">hello@navyaalmonds.com</a><br />(973) 555-0110</p>
            </div>
            <div>
                <h4>Wholesale</h4>
                <p><a asp-controller="Wholesale" asp-action="Index">Request a consultation</a></p>
            </div>
        </div>
        <p style="text-align:center;margin-top:2rem;font-size:0.85rem;">&copy; @DateTime.UtcNow.Year Navya Enterprises Inc. All rights reserved.</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
