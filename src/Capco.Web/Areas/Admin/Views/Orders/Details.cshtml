@model Capco.Domain.Entities.Order
<h1>Order @Model.OrderNumber</h1>
<p>Status: @Model.Status</p>
<form method="post" asp-action="UpdateStatus">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <select name="status">
        <option value="pending" selected="@(Model.Status == "pending" ? "selected" : null)">Pending</option>
        <option value="paid" selected="@(Model.Status == "paid" ? "selected" : null)">Paid</option>
        <option value="fulfilled" selected="@(Model.Status == "fulfilled" ? "selected" : null)">Fulfilled</option>
        <option value="cancelled" selected="@(Model.Status == "cancelled" ? "selected" : null)">Cancelled</option>
    </select>
    <button class="btn" type="submit">Update</button>
</form>
<table class="table" style="margin-top:1rem;">
    <thead>
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.NameSnapshot (@item.ColorSnapshot)</td>
            <td>@item.Qty</td>
            <td>@(item.UnitPriceSnapshot * item.Qty).ToString("C")</td>
        </tr>
    }
    </tbody>
</table>
