@model IReadOnlyList<Capco.Domain.Entities.Product>
<section class="hero">
    <h1>Classic Jordan Almonds, Perfected by Capco.</h1>
    <p>From weddings to welcome bags, our hand-drag√©ed almonds bring pastel joy to every celebration.</p>
    <a class="btn" asp-controller="Shop" asp-action="Index">Shop the Collection</a>
</section>

<h2 class="section-title">Shop by Color</h2>
<div class="tile-grid">
    <a class="tile" style="background: #FFFFFF;" asp-controller="Shop" asp-action="Index" asp-route-color="White">White<span>Elegant classics</span></a>
    <a class="tile" style="background: #F7C7D9;" asp-controller="Shop" asp-action="Index" asp-route-color="Pink">Pink<span>Blush &amp; rosy</span></a>
    <a class="tile" style="background: #BFD7FF;" asp-controller="Shop" asp-action="Index" asp-route-color="Blue">Blue<span>Soft serenity</span></a>
    <a class="tile" style="background: #FFF2B2;" asp-controller="Shop" asp-action="Index" asp-route-color="Yellow">Yellow<span>Sunny delight</span></a>
    <a class="tile" style="background: #CDEBC8;" asp-controller="Shop" asp-action="Index" asp-route-color="Green">Green<span>Garden fresh</span></a>
</div>

<h2 class="section-title">Shop by Occasion</h2>
<div class="tile-grid">
    <a class="tile" style="background: #F7C7D9;" asp-controller="Shop" asp-action="Index" asp-route-collection="Pastel">Weddings<span>Pastel palettes</span></a>
    <a class="tile" style="background: #FFF2B2;" asp-controller="Shop" asp-action="Index" asp-route-collection="Classic">Showers<span>Sweet reveals</span></a>
    <a class="tile" style="background: #BFD7FF;" asp-controller="Shop" asp-action="Index" asp-route-collection="Metallic">Parties<span>Glam shimmers</span></a>
</div>

<h2 class="section-title">Bestsellers</h2>
<div class="product-grid">
@foreach (var product in Model)
{
    var image = product.Images.FirstOrDefault();
    <article class="product-card">
        <img src="@(image?.Url ?? "/images/almonds-white.jpg")" alt="@product.Name" />
        <div class="info">
            <h3>@product.Name</h3>
            <p>Starting at @product.Variants.Min(v => v.Price).ToString("C")</p>
            <a class="btn" asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug">View Details</a>
        </div>
    </article>
}
</div>
