@model Capco.Web.Models.CheckoutViewModel
<h1>Checkout</h1>
<form method="post">
    @Html.AntiForgeryToken()
    <section class="product-grid" style="grid-template-columns: repeat(auto-fit,minmax(260px,1fr));">
        <div>
            <h2>Contact</h2>
            <label>Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>

            <h2>Shipping Address</h2>
            <label asp-for="Shipping.Line1"></label>
            <input asp-for="Shipping.Line1" />
            <span asp-validation-for="Shipping.Line1"></span>
            <label asp-for="Shipping.Line2"></label>
            <input asp-for="Shipping.Line2" />
            <label asp-for="Shipping.City"></label>
            <input asp-for="Shipping.City" />
            <label asp-for="Shipping.State"></label>
            <input asp-for="Shipping.State" />
            <label asp-for="Shipping.Zip"></label>
            <input asp-for="Shipping.Zip" />
            <label asp-for="Shipping.Country"></label>
            <input asp-for="Shipping.Country" />
        </div>
        <div>
            <h2>Billing</h2>
            <label>
                <input asp-for="UseDifferentBillingAddress" type="checkbox" /> Use different billing address
            </label>
            <div>
                <label asp-for="Billing.Line1"></label>
                <input asp-for="Billing.Line1" />
                <label asp-for="Billing.Line2"></label>
                <input asp-for="Billing.Line2" />
                <label asp-for="Billing.City"></label>
                <input asp-for="Billing.City" />
                <label asp-for="Billing.State"></label>
                <input asp-for="Billing.State" />
                <label asp-for="Billing.Zip"></label>
                <input asp-for="Billing.Zip" />
                <label asp-for="Billing.Country"></label>
                <input asp-for="Billing.Country" />
            </div>
            <h2>Payment</h2>
            <p>Stripe payment placeholder. Configure publishable key in appsettings.</p>
            <label>Promo Code</label>
            <input asp-for="PromoCode" />
        </div>
    </section>
    <div style="margin-top:2rem;display:flex;gap:1rem;justify-content:flex-end;">
        <a class="btn" asp-controller="Cart" asp-action="Index">Back to Cart</a>
        <button class="btn" type="submit">Place Order</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
