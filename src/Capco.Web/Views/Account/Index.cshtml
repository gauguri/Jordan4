<h1>My Account</h1>
<p>Welcome back, @User.Identity?.Name.</p>
<div class="product-grid" style="grid-template-columns: repeat(auto-fit,minmax(240px,1fr));">
    <div class="product-card">
        <div class="info">
            <h3>Recent Orders</h3>
            <p>Orders will appear here after checkout.</p>
        </div>
    </div>
    <div class="product-card">
        <div class="info">
            <h3>Saved Addresses</h3>
            <p>Manage shipping and billing details.</p>
        </div>
    </div>
</div>
<form method="post" asp-action="Logout" style="margin-top:2rem;">
    @Html.AntiForgeryToken()
    <button class="btn" type="submit">Log Out</button>
</form>
